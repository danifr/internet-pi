# {{ ansible_managed }}
---
version: "3.5"

networks:
  back-tier:
    name: internet-monitoring-back-tier

services:
  influxdb:
    image: influxdb:1.8.10 # 1.8.x latest influxdb compatible with 32 bits processors
    restart: always
    networks:
      - back-tier
    volumes:
      - ./data:/var/lib/influxdb
      - ./influxdb.conf:/etc/influxdb/influxdb.conf:ro
      - ./init:/docker-entrypoint-initdb.d
  telegraf:
    image: telegraf:1.27.4
    restart: always
    networks:
      - back-tier
    depends_on:
      - influxdb
    volumes:
      - /opt/vc:/opt/vc:ro
      - ./telegraf.conf:/etc/telegraf/telegraf.conf:ro
      - /:/hostfs:ro
    devices:
      - "/dev/vchiq:/dev/vchiq"
    environment:
      - LD_LIBRARY_PATH=/opt/vc/lib
      - HOST_ETC=/hostfs/etc
      - HOST_PROC=/hostfs/proc
      - HOST_SYS=/hostfs/sys
      - HOST_VAR=/hostfs/var
      - HOST_RUN=/hostfs/run
      - HOST_MOUNT_PREFIX=/hostfs
